<%layout("./layouts/boilerplates.ejs")-%>
<body>
    <h3>All listings</h3>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let list of alllistings){%>
    <a href="/listings/<%=list._id%>" class="listing-link">
    <div class="card listing-card">
        <img src="<%=list.image%>" class="card-img-top" alt="..."  style="height: 20rem;">
        <div  class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= list.title %></b>
            <br>
            &#8377; <%= list.price.toLocaleString("en-IN") %>
          </p>
        </div>
      </div>
    </a>
    <%}%>
</div>
</body>